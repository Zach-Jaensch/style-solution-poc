{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["./base.json"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "${configDir}/dist",
    "rootDir": "${configDir}/src",
    "tsBuildInfoFile": "${configDir}/node_modules/.cache/build.tsbuildinfo"
  },
  "include": ["${configDir}/src"],
  "exclude": ["${configDir}/src/**/*.test.*"]
}
