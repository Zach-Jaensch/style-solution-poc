{
  "name": "@internal/tailwind-component-lib",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./button": {
      "types": "./dist/react/button/index.d.ts",
      "import": "./dist/react/button/index.js",
      "require": "./dist/cjs/react/button/index.js"
    },
    "./style.css": {
      "import": "./dist/style.css"
    }
  },
  "scripts": {
    "build": "rm -rf dist && pnpm build:cjs && pnpm build:es && pnpm build:css",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "build:css": "tailwind -i ./packages/react/index.css -o ./dist/style.css",
    "build:es": "tsc -p ./tsconfig.es.json",
    "build:vite": "vite build",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "@internal/typescript-config": "workspace:*",
    "@safetyculture/design-tokens": "3.1.1",
    "@types/node": "^20.14.13",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "classnames": "^2.5.1",
    "postcss": "^8.4.40",
    "react": "19.0.0-rc.0",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "^3.4.7",
    "typescript": "5.2.2",
    "vite": "^5.3.5",
    "vite-plugin-dts": "4.0.0-beta.2"
  },
  "peerDependencies": {
    "react": "*"
  }
}
